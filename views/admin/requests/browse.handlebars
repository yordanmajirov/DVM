<div class="col-lg-12 services-bg" style="padding: 0;">
    <div class="container" style="padding: 20px;">
        <div class="col-lg-8 col-lg-offset-2 form-bg" style="margin-top:30px; margin-bottom: 30px;">
            <h3 class="text-muted text-uppercase"
                style="padding: 15px;
                       justify-content: center; 
                       display: flex; 
                       align-items: center"
            > {{status}} Requests
            </h3>
            <table class="table table-stripped">
                <thead>
                    <caption></caption>
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each requests}}
                        <tr>
                            <td></td>
                            <td>{{this.name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.phone}}</td>
                            <td>
                                <a class="btn btn-sm btn-default" href="/admin/requests/details/{{this.id}}">Details</a>
                                {{#if this.replied}}
                                    <a class="btn btn-sm btn-danger" href="/admin/requests/delete/{{this.id}}">Delete</a>
                                {{/if}}
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="container" style="padding: 20px;" id="pageNav">
                <div class="col-lg-12" style="align-items: center; display: flex; justify-content: center">
                    <ul class="pagination pagination-sm">
                        <li>
                            <a class="btn btn-xs bg-default" 
                                style="margin: 10px;" 
                                href="/admin/requests?page={{pagination.previous}}">
                                <span class="glyphicon glyphicon-arrow-left"> </span>
                            </a>
                        </li>
                        <li>
                            <a style="margin: 10px;" href="#">{{pagination.current}} / {{pagination.max}}</a>
                        </li>
                        <li>
                            <a class="btn btn-xs bg-default" 
                                style="margin: 10px;" 
                                href="/admin/requests?page={{pagination.next}}">
                                <span class="glyphicon glyphicon-arrow-right"> </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>