<div class="col-lg-12 services-bg" style="min-height: 400px;">
    <div class="container" style="padding: 20px;">
        <div class="col-lg-6 col-lg-offset-3">
            <form id="form-horizontal" method="POST" action="/admin/requests/delete/{{request.id}}">
                <div class="form-group">
                    <h4 class="text-white">Delete request</h4>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="{{request.name}}" disabled>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="{{request.email}}" disabled>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="{{request.phone}}" disabled>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control text-capitalize" value="{{request.date}}" disabled>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="{{request.from}}" disabled>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="{{request.to}}" disabled>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="{{#each request.items}}{{this.name}} {{/each}}" disabled>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="{{request.message}}" disabled>
                </div>
                <a href="/admin/requests" class="btn btn-default">Back</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>