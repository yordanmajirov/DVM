<div class="col-lg-12 services-bg" style="min-height: 400px;">
    <div class="container" style="padding: 20px;">
        <div class="col-lg-6 col-lg-offset-3">
            <form class="form-bg" style="padding: 15px" id="form-horizontal" method="POST" action="/admin/items/create">
                
                <div class="form-group">
                    <h4>Create new item</h4>
                </div>
                
                <div class="form-group">
                    <input type="text" class="form-control" id="nameInput" name="name" placeholder="Name">
                </div>

                <div class="form-group">
                    <input type="number" class="form-control" id="priceInput" name="price" placeholder="Price">
                </div>
                
                <a href="/admin/items" class="btn btn-default">Back</a>
                <button type="submit" class="btn btn-primary blue-btn">Submit</button>
            </form>
        </div>
    </div>
</div>