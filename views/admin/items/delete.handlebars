<div class="col-lg-12 services-bg" style="min-height: 400px;">
    <div class="container" style="padding: 20px;">
        <div class="col-lg-6 col-lg-offset-3">
            <form id="form-horizontal" method="POST" action="/admin/items/delete/{{item.id}}">
                <div class="form-group">
                    <h4 class="text-white">Delete item</h4>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="nameInput" name="name" placeholder="{{item.name}}" disabled>
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" id="priceInput" name="price" placeholder="{{item.price}}" disabled>
                </div>
                <a href="/admin/items" class="btn btn-default">Back</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>