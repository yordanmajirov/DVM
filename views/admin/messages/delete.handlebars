<div class="col-lg-12 services-bg" style="min-height: 400px;">
    <div class="container" style="padding: 20px;">
        <div class="col-lg-8 col-lg-offset-2">
            <form class="form-bg" style="padding: 15px" id="form-horizontal" method="POST" action="/admin/messages/delete/{{message.id}}">
                <div class="form-group">
                    <h4>Delete message</h4>
                </div>

                <div class="form-group">
                    <input type="email" class="form-control" id="emailInput" name="email" placeholder="Email" value="{{message.from}}" disabled>
                </div>
                
                <div class="form-group">
                    <input type="text" class="form-control" id="subjectInput" name="subject" placeholder="Subject" value="{{message.subject}}" disabled>
                </div>

                <div class="form-group">
                    <textarea rows="5" class="form-control" id="messageInput" name="message" placeholder="Message" disabled><--!!Quoted message: {{message.text}} !!--></textarea>
                </div>
                <a href="/admin/messages/details/{{message.id}}" class="btn btn-default">Back</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>